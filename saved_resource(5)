window.Adform.Tracking.TrackingPointId = 35167882;
window.Adform.Tracking.TrackingPointName = "danhostel.dk/en/hostel/danhostel-aarhus-city";
Adform.Tracking.CreateIframeElement("https://track.adform.net/serving/container/?pm=180448&lid=35167882&ctype=0&media=0&PageName=danhostel.dk%2fen%2fhostel%2fdanhostel-aarhus-city&rnd=1918408532&cpref=https%3a%2f%2fwww.google.com%2f&loc=https%3a%2f%2fwww.danhostel.dk%2fen%2fhostel%2fdanhostel-aarhus-city");try{
(function () {
    //Insert the different timing intervals you want to check for. 
    var periods = [15, 30, 60, 120];
    // The AdForm Client ID
    var clientID = 180448;
    // The naming convention you want to use for the Tracking points, i.e tracking points will be named "More than 15 sec"
    var tpTemplate = 'More than ';
     
    /*----------------------------------------------------------------------------------*/
     
    //Will look up the time spent on site for the specific user. 
    var spentTime = localStorage.adfEdVpTimeSpentOnWebsite ? JSON.parse(localStorage.adfEdVpTimeSpentOnWebsite) : {};
    //This will update the total time spent on the site for a specific user. 
    var total = localStorage.adfEdVpTotalTimeOnWebsite ? parseInt(localStorage.adfEdVpTotalTimeOnWebsite, 10) : 0;
 
    //This function will be called to update the tracking point that was created. 
    var trackByTime = function (seconds) {
        adf.track(clientID, tpTemplate + seconds + ' sec');
        spentTime['spent' + seconds] = true;
    };

    //This will check the time spent on site and update the corresponding tracking points if you reach the conversion time. 
    var check = function () {
        total++;
        syncStorage();
 
        for (var i = 0; i < periods.length; i++) {
            if (total > periods[i] && !spentTime['spent' + periods[i]]) {
                trackByTime(periods[i]);
            };
 
            if (total > periods[periods.length - 1]) {
                clearInterval(x);
                syncStorage();
            };
        };
    };
    
    if (spentTime['spent' + periods[periods.length - 1]]) {
        return;
    };
 
    //This will update total and spentTime variables. 
    var syncStorage = function () {
        localStorage.adfEdVpTimeSpentOnWebsite = JSON.stringify(spentTime);
        localStorage.adfEdVpTotalTimeOnWebsite = total;
    };
 
    var x = setInterval(check, 1000);
})();
var adfUrlCheck = location.href.toLowerCase();
